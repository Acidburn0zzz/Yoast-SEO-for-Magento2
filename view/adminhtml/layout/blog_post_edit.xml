<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="yoast" />
    <body>
        <block name="maxserv_yoast_block" class="MaxServ\YoastSeo\Block\Adminhtml\YoastBox" />
        <referenceContainer name="before.body.end">
            <block class="MaxServ\YoastSeo\Block\Adminhtml\YoastBox\Config" name="maxserv_yoastseo_yoastbox_config">
                <arguments>
                    <argument name="entity_type" xsi:type="string">mirasvit_blog</argument>
                    <argument name="config" xsi:type="array">
                        <item name="focusKeywordFieldIdentifier" xsi:type="string"><![CDATA[.admin__field.field.field-focus_keyword]]></item>
                        <item name="focusKeywordIdentifier" xsi:type="string"><![CDATA[#focus_keyword]]></item>
                        <item name="titleIdentifier" xsi:type="string"><![CDATA[#name]]></item>
                        <item name="metaTitleIdentifier" xsi:type="string"><![CDATA[#meta_title]]></item>
                        <item name="metaDescriptionIdentifier" xsi:type="string"><![CDATA[#meta_description]]></item>
                        <item name="metaKeywordsIdentifier" xsi:type="string"><![CDATA[.admin__field.field.field-meta_keywords]]></item>
                        <item name="urlKeyIdentifier" xsi:type="string"><![CDATA[#url_key]]></item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
