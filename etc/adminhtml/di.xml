<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="MaxServ\YoastSeo\Model\ImageUploader" type="Magento\Catalog\Model\ImageUploader">
        <arguments>
            <argument name="baseTmpPath" xsi:type="string">yoast/tmp</argument>
            <argument name="basePath" xsi:type="string">yoast/img</argument>
            <argument name="allowedExtensions" xsi:type="array">
                <item name="jpg" xsi:type="string">jpg</item>
                <item name="jpeg" xsi:type="string">jpeg</item>
                <item name="gif" xsi:type="string">gif</item>
                <item name="png" xsi:type="string">png</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="MaxServ\YoastSeo\Controller\Adminhtml\Image\Upload">
        <arguments>
            <argument name="imageUploader" xsi:type="object">MaxServ\YoastSeo\Model\ImageUploader</argument>
        </arguments>
    </type>
    <type name="MaxServ\YoastSeo\Plugin\Cms\PagePlugin">
        <arguments>
            <argument name="imageUploader" xsi:type="object">MaxServ\YoastSeo\Model\ImageUploader</argument>
        </arguments>
    </type>
    <type name="MaxServ\YoastSeo\Model\Attribute\Backend\Image">
        <arguments>
            <argument name="imageUploader" xsi:type="object">MaxServ\YoastSeo\Model\ImageUploader</argument>
        </arguments>
    </type>
    <type name="Magento\Cms\Model\Page">
        <plugin name="maxserv_yoastseo_cms_pageplugin" type="MaxServ\YoastSeo\Plugin\Cms\PagePlugin" sortOrder="1"
                disabled="false"/>
    </type>
    <type name="Magento\Cms\Model\Page\DataProvider">
        <plugin name="maxserv_yoastseo_cms_page_dataproviderplugin"
                type="MaxServ\YoastSeo\Plugin\Cms\Page\DataProviderPlugin" sortOrder="1" disabled="false"/>
    </type>
    <type name="Magento\Catalog\Model\Category\DataProvider">
        <plugin name="maxserv_yoastseo_catalog_category_dataproviderplugin"
                type="MaxServ\YoastSeo\Plugin\Catalog\Category\DataProviderPlugin" sortOrder="1" disabled="false"/>
    </type>
    <virtualType name="Magento\Catalog\Ui\DataProvider\Product\Form\Modifier\Pool">
        <arguments>
            <argument name="modifiers" xsi:type="array">
                <item name="yoastseo" xsi:type="array">
                    <item name="class" xsi:type="string">MaxServ\YoastSeo\Ui\Catalog\DataProvider\Product\Form\Modifier\YoastSeo</item>
                    <item name="sortOrder" xsi:type="number">130</item>
                </item>
            </argument>
        </arguments>
    </virtualType>
</config>
